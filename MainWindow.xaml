<Window x:Class="WatchHeartRateReceiver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="智能穿戴设备蓝牙心率广播监控" Height="327" Width="400"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="CanMinimize"
    >
    <Grid Margin="10">
        <StackPanel>
            <TabControl x:Name="tabControl" Height="291">
                <TabItem Header="选择类型">
                    <StackPanel Height="235">
                        <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="请选择你的设备类型" FontSize="24" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="textBlock1" TextWrapping="Wrap" Text="不同设备类型具有不同的蓝牙广播协议，选择错误的设备类型会导致无法扫描到设备。如果一种设备类型无法正确扫描到你的设备。请尝试选择另一种设备类型。" Margin="0,0,0,10"/>
                        <RadioButton x:Name="radioButton_olddevice" Content="小米手环4-7以及同时期华米设备" Height="27" Width="374" FontSize="14" Margin="0,4,0,0" IsChecked="False" Checked="radioButton_olddevice_Checked"/>
                        <RadioButton x:Name="radioButton_newdevice" Content="其他品牌设备、新款小米/华米设备" Height="27" Width="374" FontSize="14" Margin="0,4,0,0" IsChecked="False" Checked="radioButton_newdevice_Checked"/>
                        <Button x:Name="button_select" Content="开始监控" Height="35" Width="133" Margin="0,40,0,0" Click="button_Click" IsEnabled="False"/>


                    </StackPanel>
                </TabItem>
                <TabItem Header="选择设备" Height="19" VerticalAlignment="Top">
                    <StackPanel Height="235">
                        <TextBlock TextWrapping="Wrap" Text="请选择你的设备" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="scan_num" TextWrapping="Wrap" Text="当前已扫描到0个设备" Margin="0,10,0,0" HorizontalAlignment="Center" FontSize="14"/>
                        <ComboBox x:Name="comboBox_device" Width="300" RenderTransformOrigin="0.614,1.086" Margin="0,20,0,0" Height="22" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">

                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>
                        <TextBlock TextWrapping="Wrap" Text="需要一些时间来扫描你的设备。如果始终没有列出你的设备，请尝试返回上一步更改设备类型。" Margin="0,10,0,0" Width="300" Padding="0,10,0,0"/>
                        <StackPanel Orientation="Horizontal" Margin="30,46,30,20" Width="300">
                            <Button x:Name="button_select_back" Content="上一步" Height="28" Width="84" Click="button_select_back_Click" HorizontalAlignment="Left"/>
                            <Button x:Name="button_select_2" Content="下一步" Height="28" Width="84" Click="button_select_2_Click" HorizontalAlignment="Right" Margin="132,0,0,0" IsEnabled="False" />
                        </StackPanel>




                    </StackPanel>
                </TabItem>
                <TabItem Header="查看心率">
                    <StackPanel Height="235">
                        <TextBlock Text="心率监控" FontSize="24" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                        <TextBlock Text="设备名称：" FontSize="14"/>
                        <TextBlock x:Name="DeviceNameText" FontSize="14" Foreground="DarkBlue" HorizontalAlignment="Center"/>
                        <TextBlock Text="信号强度：" FontSize="14" Margin="0,5,0,0"/>
                        <TextBlock x:Name="RssiText" FontSize="14" Foreground="DarkGreen" HorizontalAlignment="Center"/>
                        <TextBlock Text="当前心率：" FontSize="14" Margin="0,5,0,0"/>
                        <TextBlock x:Name="HeartRateText" FontSize="14" FontWeight="Bold" Foreground="Red" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="StatusText" FontSize="14" Foreground="Gray" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                        <Button x:Name="button_exit" Content="退出监控" Height="35" Width="133" Margin="0,10,0,0" Click="button_exit_Click"/>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</Window>
